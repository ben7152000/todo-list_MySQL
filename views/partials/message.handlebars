{{#if success_msg}}
  <div class="text-white px-6 py-4 border-0 rounded relative mb-4 bg-purple-500"
    role="alert">
    <span class="text-xl inline-block mr-5 align-middle">
      <i class="fas fa-bell"></i>
    </span>
    <span class="inline-block align-middle mr-8">
      {{{success_msg}}}
    </span>
    <button
      class="absolute bg-transparent text-2xl leading-none right-0 top-0 mt-4 mr-6 outline-none focus:outline-none"
      data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
{{/if}}
{{#if warning_msg}}
  <div class="text-white px-6 py-4 border-0 rounded relative mb-4 bg-purple-500"
    role="alert">
    <span class="text-xl inline-block mr-5 align-middle">
      <i class="fas fa-bell"></i>
    </span>
    <span class="inline-block align-middle mr-8">
      {{{warning_msg}}}
    </span>
    <button
      class="absolute bg-transparent text-2xl leading-none right-0 top-0 mt-4 mr-6 outline-none focus:outline-none"
      data-dismiss="alert">
      <span>&times;</span>
    </button>
  </div>
{{/if}}
{{#if errors}}
  {{#each errors}}
    <div
      class="text-white px-6 py-4 border-0 rounded relative mb-4 bg-purple-500"
      role="alert">
      <span class="text-xl inline-block mr-5 align-middle">
        <i class="fas fa-bell"></i>
      </span>
      <span class="inline-block align-middle mr-8">
        {{{this.message}}}
      </span>
      <button
        class="absolute bg-transparent text-2xl leading-none right-0 top-0 mt-4 mr-6 outline-none focus:outline-none"
        data-dismiss="alert">
        <span>&times;</span>
      </button>
    </div>
  {{/each}}
{{/if}}
